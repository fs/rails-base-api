    "RAILS_ENV": { "required": true },
    "SECRET_KEY_BASE": { "required": true },
    "MAILER_SENDER_ADDRESS": { "required": true }
  },
  "addons": [
    "heroku-postgresql",
    "sendgrid"
  ]
}
